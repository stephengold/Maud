<!--
 Nifty XML to lay out a simple text-entry dialog box for a screen controlled
 by a GuiScreenController.

 When a dialog box is active, the rest of the screen dims by 50%.
-->
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">

    <!-- define styles and controls -->
    <useStyles filename="nifty-default-styles.xml"/>
    <useStyles filename="Interface/Nifty/styles/bats.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

    <popup id="dialogs/text-entry"
           backgroundColor="#0008"
           childLayout="vertical">
        <panel/>
        <panel childLayout="horizontal"
               height="130px">
            <panel/>
            <panel childLayout="vertical"
                   backgroundColor="#aaaf"
                   padding="8px,8px,8px,8px"
                   width="366px">
                <panel childLayout="horizontal">
                    <control name="label" id="#prompt"
                             color="#000f"
                             textHAlign="left"
                             width="*"/>
                </panel>
                <panel height="8px"/>
                <panel childLayout="horizontal">
                    <control name="textfield" id="#textfield"
                             text="default text"/>
                </panel>
                <panel height="8px"/>
                <panel childLayout="horizontal">
                    <control name="label" id="#feedback"
                             color="#800f"
                             textHAlign="center"
                             width="*"/>
                </panel>
                <panel height="8px"/>
                <panel childLayout="horizontal">
                    <panel/>
                    <control name="button" id="#cancel"
                             label="Cancel"
                             width="50px">
                        <interact onRelease="performActive(cancel)"/>
                    </control>
                    <panel width="10px"/>
                    <control name="button" id="#commit"
                             label="OK"
                             width="*">
                        <interact onRelease="performActive(commit)"/>
                    </control>
                    <panel/>
                </panel>
            </panel>
            <panel/>
        </panel>
        <panel/>
    </popup>
</nifty>